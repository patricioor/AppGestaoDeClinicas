{

  "ConnectionStrings": {
    "DefaultConnection": "Data Source=PATRICIO\\MSSQLSERVER02;Initial Catalog=GeCliDbTest;Integrated Security=True;TrustServerCertificate=True"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Enrich": [ "FromLogContext", "WithExceptionDetails"],
    "MinimumLevel": "Warning",
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {"Name": "Console" },
            {"Name": "File",
             "Args": {
              "path": "log.txt",
                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
                "fileSizeLimitBytes": "1000000",
                "rollOnFileSizeLimit": "true",
                "rollingInterval" : "Day"
              }
            }
          ]
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
